<div class="uk-container">
  <div class="uk-height-medium uk-flex uk-flex-center uk-flex-middle uk-background-cover" data-src="<%= @flat.picture_url %>" uk-img>
      <h1>Background Image</h1>
  </div>

<div class="uk-text-center" uk-grid>
    <div class="uk-width-expand@m">
        <div class="uk-card uk-card-default uk-card-body">
          <h3><%= @flat.name %></h3>
          <p><%= @flat.address %></p>
          
          <hr class="uk-divider-icon">

          <h3>A bit more about this flat...</h2>
          <p><%= @flat.description %></p>

          <hr class="uk-divider-icon">

          <h3>Details</h3>
            <p class="uk-text-middle">
              <i class="tiny material-icons uk-text-middle">people</i> <%= @flat.number_of_guests %>
              <i class="tiny material-icons uk-text-middle">attach_money</i> <%= @flat.price_per_night %>
            </p>
        </div>
    </div>
    <div class="uk-width-1-3@m">
        <div class="uk-card uk-card-default uk-card-body">
          <h3>Book this place!</h3>
          <div uk-form-custom>
          <form class="uk-form">
            <label for="from">From:</label>
            <input type="date" data-uk-datepicker="01.11.2021">
            <br>
            <label for="to">To:</label>
            <input type="date" data-uk-datepicker="01.11.2021">
            <br>
            <button class="uk-button uk-button-default" type="button" tabindex="-1">Select</button>
          </form>
        </div>

        <hr class="uk-divider-icon">
        <div>
          <h3>Share</h3>
          <p>Social media</p>
        </div>
    </div>
</div>
